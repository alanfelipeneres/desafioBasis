@model Biblioteca.AplicacaoMvc.Models.AssuntoVM

@{
    ViewData["Title"] = "Editar Assunto";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label for="CodAs">Código do Assunto</label>
        <input type="text" class="form-control" id="CodAs" asp-for="CodAs" readonly />
        <span asp-validation-for="CodAs" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" class="form-control" id="Descricao" asp-for="Descricao" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Assunto")" class="btn btn-secondary">Cancelar</a>
</form>

<!-- Exibe as mensagens de erro -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
