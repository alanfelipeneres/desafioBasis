@model Biblioteca.AplicacaoMvc.Models.AutorVM

@{
    ViewData["Title"] = "Editar Autor";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label for="CodAu">Código do Autor</label>
        <input type="text" class="form-control" id="CodAu" asp-for="CodAu" readonly />
        <span asp-validation-for="CodAu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" class="form-control" id="Descricao" asp-for="Nome" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Autor")" class="btn btn-secondary">Cancelar</a>
</form>

<!-- Exibe as mensagens de erro -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
