@model IEnumerable<Biblioteca.AplicacaoMvc.Models.AutorVM>

@{
    ViewData["Title"] = "Gerenciar Autores";
}

<div class="container">
    <h1 class="display-4 text-center">Gerenciar Autores</h1>
    <div class="mb-3 text-end">
        <!-- Botão para adicionar um novo Autor -->
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Adicionar Novo Autor
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Tabela para exibir os Autores -->
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th style="width: 300px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Autor in Model)
                {
                    <tr>
                        <td>@Autor.CodAu</td>
                        <td>@Autor.Nome</td>
                        <td>
                            <!-- Botão para detalhes -->
                            <a asp-action="Details" asp-route-id="@Autor.CodAu" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Detalhes
                            </a>
                            <!-- Botão para edição -->
                            <a asp-action="Edit" asp-route-id="@Autor.CodAu" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <!-- Botão para exclusão -->
                            <a asp-action="Delete" asp-route-id="@Autor.CodAu" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <!-- Mensagem caso não haja Autores cadastrados -->
        <div class="alert alert-warning text-center">
            Não há autores cadastrados no momento.
        </div>
    }
</div>
